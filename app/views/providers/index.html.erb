<% provide(:title, 'Tutors Dashboard') %>
<div class="container">
<h1>Tutors Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Position</th>
          <th>Department</th>
          <th>College</th>
          <th>University</th>
      </tr>
  </thead>
  <tbody>
  <% @providers.each do |provider| %>
    <tr>
        <td><%= link_to provider.name, provider %></td>
        <td><%= provider.email %></td>
        <td><%= provider.position %></td>
        <td><%= provider.department %></td>
        <td><%= provider.college %></td>
        <td><%= provider.university %></td>
        <td><%= link_to("Edit Tutor", edit_provider_path(provider), :class => 'btn btn-mini') %></td>
        <td><%= link_to("Delete Tutor", provider_path(provider), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<div class="container">
	<center><%= link_to "Add new tutor", new_provider_path, :class => "btn btn-large btn-primary" %></center>
</div>