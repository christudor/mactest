<% provide(:title, 'Add New Module') %>

<div class="container">
<h1>Add New Module</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@lesson) do |f| %>

      <%= f.label :course_id, "Course:" %>
      <%= f.collection_select :course_id, Course.all, :id, :name, {}, { :multiple => false } %>

      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>

      <%= f.label :lessondescription, "Synopsis:" %>
      <%= f.text_area :lessondescription, :rows => 3 %>

      <br>
      <br>
      <center><%= f.submit "Add Module", class: "btn btn-large btn-primary" %></center>
    <% end %>
  </div>
</div>

</div>
