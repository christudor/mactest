<% provide(:title, 'Edit Lecture') %>

<div class="container">
<h1>Edit Lecture</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @lesson, :html => {:multipart => true} do |f| %>
      <%= render 'shared/lesson_error_messages' %>

      <%= f.label :course_id %>
      <%= f.collection_select :course_id, Course.all, :id, :name, {}, { :multiple => false } %>

      <%= f.label :title %>
      <%= f.text_field :title %>  

      <%= f.label :length %>
      <%= f.text_field :length %>

      <%= f.label :lessondescription %>
      <%= f.text_field :lessondescription %>

      <%= f.submit "Update Lecture", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>