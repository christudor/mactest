<% provide(:title, 'Course Dashboard') %>

<div class="container">
<h1>Course Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Provider</th>
          <th>No. of Lectures</th>
      </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.category %></td>
        <td><%= link_to course.provider.name, provider_path(course.provider) %></td>
        <td><%= course.lessons.count %></td>
        <td><%= link_to("Edit Course", edit_course_path(course), :class => 'btn btn-mini') %></td>
        <td><%= link_to("Delete course", course_path(course), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
