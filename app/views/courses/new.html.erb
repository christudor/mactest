<% provide(:title, 'Add New Course') %>

<div class="container">
<h1>Add New Course (Stage 2 of 2)</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @course, :html => {:multipart => true} do |f| %>
    	<%= render 'shared/course_error_messages' %>

      <%= f.hidden_field :key %>

      <p>File: <%= @course.avatar_name %><p>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :category %>
      <%= f.text_field :category %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :provider_id %>
      <%= f.collection_select :provider_id, Provider.all, :id, :name, {}, { :multiple => false } %>

      <%= f.submit "Add Course", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div> 