<% provide(:title, 'Add New Course') %>

<div class="container">
<h2>Add New Course</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @course, :html => {:multipart => true} do |f| %>
    	<%= render 'shared/course_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :category %>
      <%= f.text_field :category %>

      <%= f.label :description %>
      <%= f.text_field :description %>

	    <%= f.file_field :avatar %>

      <%=f.label :remote_avatar_url, "or image URL" %>
      <%=f.text_field :remote_avatar_url %>

      <%= f.submit "Add Course", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>