<% provide(:title, 'Sign up') %>
<div class="container">
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@teacher) do |f| %>
    	<%= render 'shared/teacher_error_messages' %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>