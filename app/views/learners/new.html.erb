<% provide(:title, 'Sign up') %>

<div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
          <img src="http://placebox.es/1024/500" alt="">
          <div class="container">
            <div class="carousel-caption">
              <h1>Welcome to the MASSOLIT</h1>
              <p class="lead">Focusing on the humanities.</p>
              <%= link_to "Learn More", about_path, class: "btn btn-large btn-primary" %>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="http://placebox.es/1024/500" alt="">
          <div class="container">
            <div class="carousel-caption">
              <h1>Real marking.</h1>
              <p class="lead">There is no such thing as the 'right' response to literature. You won't find any multiple choice tests here.</p>
              <%= link_to "What we believe.", about_path, class: "btn btn-large btn-primary" %>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="http://placebox.es/1024/500" alt="">
          <div class="container">
            <div class="carousel-caption">
              <h1>World-class learning.</h1>
              <p class="lead">Our collection of courses is smaller than most.</p>
              <%= link_to "Sign up now.", signup_path, class: "btn btn-large btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>


<div class="container">
<h2 class="featurette-heading">Want to learn more?</h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@learner) do |f| %>
      <%= render 'shared/learner_error_messages' %>

    <center>
      <%= f.label :email, "Pop your e-mail in the box below and we'll get back to you!" %>
    </center>
      <%= f.text_field :email %>

    <center>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    </center>
    <% end %>
  </div>
</div>
</div>

<div class="container">
    <hr class="featurette-divider">

      <div class="featurette">
        <img class="featurette-image pull-right" src="http://placebox.es/450">
        <h2 class="featurette-heading">Learn what you want to learn.</h2>
        <p class="lead">At MASSOLIT, we're passionate about the humanities - which is why we're putting together a load of great courses from A(belard) to Z(oroastrianism) and everything in between.</p>
      </div>

      <hr class="featurette-divider">

      <div class="featurette">
        <img class="featurette-image pull-left" src="http://placebox.es/450">
        <h2 class="featurette-heading">Learn from the best.</h2>
        <p class="lead">We believe in the power of great teachers, which is why we're working with academics from the best universities in the world to make our courses.</p>
      </div>

      <hr class="featurette-divider">

      <div class="featurette">
        <img class="featurette-image pull-right" src="http://placebox.es/450">
        <h2 class="featurette-heading">Keep in touch.</h2>
        <p class="lead">We're currently working hard on our first few courses, which should be ready very soon. If you'd like to know a little bit more about what we're going, or just want to say 'Hi', drop us your e-mail in the form below and we'll be sure to be touch personally (no automated e-mails, promise!)</p>
      </div>

      <hr class="featurette-divider">
<div class="container">
<h2 class="featurette-heading">Still interested?</h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@learner) do |f| %>
      <%= render 'shared/learner_error_messages' %>

    <center>
      <%= f.label :email, "Let us know your e-mail and we'd love to tell you more." %>
    </center>
      <%= f.text_field :email %>

    <center>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    </center>
    <% end %>
  </div>
</div>
</div>
