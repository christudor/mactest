<% provide(:title, 'Edit Handout') %>

<div class="container">
<h2>Edit Handout</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @lesson, :html => {:multipart => true} do |f| %>
    	<%= render 'shared/handout_error_messages' %>

      <%= f.label :lesson_id %>
      <%= f.collection_select :lesson_id, Lesson.all, :id, :name, {}, { :multiple => false } %>

      <%= f.label :name %>
      <%= f.text_field :name %>  

      <%= f.submit "Edit Handout", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>
