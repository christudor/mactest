<% provide(:title, 'Handouts Dashboard') %>
<div class="container">
<h1>Handouts Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Name</th>
          <th>Lesson</th>
          <th>Course</th>
          <th>Provider</th>
          <th>Date Added</th>
      </tr>
  </thead>
  <tbody>
  <% @handouts.each do |handout| %>
    <tr>
        <td><%= link_to handout.name, handout %></td>
        <td><%= link_to handout.lesson.title, handout.lesson %></td>
        <td><%= link_to handout.lesson.course.provider.name, handout.lesson.course.provider %></td>
        <td><%= handout.created_at.to_date %></td>
        <td><%= link_to("Edit Handout", edit_handout_path(handout), :class => 'btn btn-mini') %></td>
        <td><%= link_to("Delete Handout", handout_path(handout), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<div class="container">
  <center><%= link_to "Add new handout", addhandout_path, :class => "btn btn-large btn-primary" %></center>
</div>