<% provide(:title, 'Qualifications Dashboard') %>
<div class="container">
<h1>Qualifications Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Board</th>
          <th>Code</th>
          <th>Name</th>
      </tr>
  </thead>
  <tbody>
  <% @qualifications.each do |qualification| %>
    <tr>
        <td><%= qualification.board %></td>
        <td><%= qualification.code %></td>
        <td><%= link_to qualification.name, qualification %></td>
        <td><%= link_to("Edit Qualification", edit_qualification_path(qualification), :class => 'btn btn-mini') %></td>
        <td><%= link_to("Delete Qualification", qualification_path(qualification), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<div class="container">
	<center><%= link_to "Add new Qualification", new_qualification_path, :class => "btn btn-large btn-primary" %></center>
</div>