<% unless Banner.all.count == 0 %>

<% banner = Banner.order("RANDOM()").first %>

<div id="myCarousel" class="carousel slide">
	<div class="carousel-inner">
		<div class="item active">
			<%= image_tag banner.banner %>
				<div class="carousel-caption">
					<div class="container">
						<div class="span12">
						<div class="span8">
							<h4>Learn About... <%= banner.name %></h4>
							<p><%= banner.description %></p>	
						</div>					
						<div class="span3">

							<%= link_to "Browse our courses", courses_path, class: "btn btn-large btn-primary btn-right" %>
						</div>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>

<% end %>
