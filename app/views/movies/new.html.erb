<% provide(:title, 'Add New Video') %>

<div class="container">
<h1>Add Video (Stage 2 of 2)</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @movie, :html => {:multipart => true} do |f| %>
    	<%= render 'shared/movie_error_messages' %>

      <%= f.hidden_field :key %>

      <p>Video File: <%= @movie.movie_name %></p> 

      <%= f.label :lesson_id, "Module:" %>
      <%= f.collection_select :lesson_id, Lesson.all, :id, :title, {}, { :multiple => false } %>

      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>  

      <br><br>
      <center>
        <%= f.submit "Add Video", class: "btn btn-large btn-primary" %>
      </center>
    <% end %>
  </div>
</div>
</div>
