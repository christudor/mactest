<% provide(:title, 'Videos Dashboard') %>
<div class="container">
<h1>Videos Dashboard</h1>

<div class="alert alert-error">
  <strong>Heads up:</strong> Please only use this dashboard for deleting videos that are no longer needed. Editing records screws up the link with Amazon S3.
</div>

<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Video Name</th>
          <th>Module</th>
          <th>Course</th>
          <th>Provider</th>
          <th>Date Added</th>
      </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
        <td><%= link_to movie.name, movie %></td>
        <td><%= link_to movie.lesson.title, movie.lesson %></td>
        <td><%= link_to movie.lesson.course.provider.name, movie.lesson.course.provider %></td>
        <td><%= movie.created_at.to_date %></td>
        <td><%= link_to("Delete Video", movie_path(movie), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<div class="container">
  <center><%= link_to "Add New Video", addmovie_path, :class => "btn btn-large btn-primary" %></center>
</div>