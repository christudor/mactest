<% provide(:title, 'Edit Source') %>

<div class="container">
<h2>Edit Source</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @source, :html => {:multipart => true} do |f| %>
      <%= render 'shared/source_error_messages' %>

      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>

      <%= f.label :date, "Date:" %>
      <%= f.text_field :date %>

      <%= f.label :fulltext, "Quote:" %>
      <%= f.text_area :fulltext, :rows => 4 %>

      <br>

      <p class="body">Note: quotes can have embedded HTML, e.g. <code>&lt;br&gt;</code>, <code>&lt;em&gt;</code>, <code>&lt;strong&gt;</code>, etc. Remember that one <code>&lt;br&gt;</code> tag renders a new line, two <code>&lt;br&gt;</code> tags render a new paragraph.
      
      <br><br>

      <%= f.label :reference, "Reference:" %>
      <%= f.text_field :reference %>

	    <%= f.label :link, "Link to Original (if available)" %>
      <%= f.text_field :link %>

      <%= f.label :wikipedia, "Link to Wikipedia Article (if available)" %>
      <%= f.text_field :wikipedia %>

      <%= f.label :lesson_id, "Lesson:" %>
      <%= f.collection_select :lesson_id, Lesson.all, :id, :title, {}, { :multiple => false } %>

      <%= f.submit "Update Source", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>