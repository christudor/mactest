<% provide(:title, @user.name) %>

<div class="container">
  <h1><%= @user.name %></h1>
</div>

<div class="container">

	<div class="span7">

		<%= render 'usage' %>

	</div>

	<div class="span3 offset1">
  
		<h2>Personal Information</h2>
  		
  		<ul class="courselist">
  		
  			<li><i class="icon-user"></i> Name: <%= @user.name unless nil %></li>

    	<% unless @user.sex == nil %>
        	<li><i class="icon-user"></i> Gender: <%= @user.sex %></li>
    	<% end %>
    	
    	<% unless @user.date_of_birth == nil %>
    		<li><i class="icon-user"></i> Age: <%= Date.today.year - @user.date_of_birth.to_date.year %></li>
    	<% end %>
     
  		</ul>

	<% unless current_user.blank? %>
	    <% if current_user.id == @user.id %>
	    
	    <center>
	    	
	    	<br>
	    	<%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-large btn-primary" %>
	    	<br><br>

	    </center>
	    <% else %>
	    <% end %>
	<% end %>

</div>
</div>