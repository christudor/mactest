<% provide(:title, 'Books Dashboard') %>
<div class="container">
<h1>Books Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Section</th>
          <th>Title</th>
          <th>Author</th>
          <th>Date of Publication</th>
          <th>Read Online</th>
          <th>Purchase</th>
          <th>Comment</th>
          <th>Module</th>
          <th>Course</th>
      </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
        <td><%= book.section %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.publication_date %></td>
        <td><%= link_to "[Link]", book.perseus, :target => "_blank" %></td>
        <td><%= link_to "[Link]", book.amazon, :target => "_blank"%></td>
        <td><%= book.comment %></td>
        <td><%= link_to book.lesson.title, book.lesson %></td>
        <td><%= link_to book.lesson.course.name, book.lesson.course %></td>
        <td><%= link_to("Edit Book", edit_book_path(book), :class => 'btn btn-mini') %></td>
        <td><%= link_to("Delete Book", book_path(book), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<div class="container">
	<center><%= link_to "Add New Book", new_book_path, :class => "btn btn-large btn-primary" %></center>
</div>