<% provide(:title, 'Edit Book') %>

<div class="container">
<h2>Edit Book</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @book, :html => {:multipart => true} do |f| %>
      <%= render 'shared/book_error_messages' %>

      <%= f.label :section, "Section:" %>
      <%= f.text_field :section %>

      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>

      <%= f.label :author, "Author:" %>
      <%= f.text_field :author %>

      <%= f.label :publication_date, "Publication Date:" %>
      <%= f.text_field :publication_date %>

      <%= f.label :perseus, "URL (if available online):" %>
      <%= f.text_field :perseus %>

      <%= f.label :amazon, "Link to book on Amazon:" %>
      <%= f.text_field :amazon %>

      <%= f.label :comment, "Why the book worth reading:" %>
      <%= f.text_area :comment, :rows => 3 %>

      <%= f.label :lesson_id, "Lesson:" %>
      <%= f.collection_select :lesson_id, Lesson.all, :id, :title, {}, { :multiple => false } %>


      <%= f.submit "Update Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>