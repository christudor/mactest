<% provide(:title, 'Scores Dashboard') %>
<div class="container">
<h1>Scores Dashboard</h1>
<div class="span12">
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Course</th>
          <th>Module</th>
          <th>User</th>
          <th>Score</th>
          <th>Out Of</th>
          <th>Percentage</th>
      </tr>
  </thead>
  <tbody>
  <% @scores.each do |score| %>
    <tr>
        <td><%= link_to score.quiz.lesson.course.name, score.quiz.lesson.course unless Quiz.find_by_id(score.quiz).blank? %></td>
        <td><%= link_to score.quiz.lesson.title, score.quiz.lesson unless Quiz.find_by_id(score.quiz).blank?  %></td>
        <td><%= link_to Subscriber.find(score.subscriber_id).name, Subscriber.find(score.subscriber_id) unless Subscriber.find(score.subscriber_id).blank? %></td>
        <td><%= score.score unless score.score.blank? %></td>
        <td><%= score.possible unless score.possible.blank? %></td>
        <td><%= score.percentage unless score.percentage.blank? %>%</td>
        <td><%= link_to("Delete Score", score_path(score), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>